# =================================
# PROMPT FLOW BACKEND CONFIGURATION
# =================================

# Environment
ENVIRONMENT=development
LOG_LEVEL=INFO
DEBUG=true

# Security
SECRET_KEY=your-super-secret-key-change-in-production-minimum-32-characters
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Database Configuration
MONGODB_URL=mongodb://admin:devpassword@localhost:27017/prompt_flow_dev?authSource=admin
QDRANT_URL=http://localhost:6333
REDIS_URL=redis://localhost:6379/0

# Optional: PostgreSQL for analytics
POSTGRES_URL=postgresql://postgres:devpassword@localhost:5432/prompt_flow_analytics

# CORS Configuration
ALLOWED_ORIGINS=["http://localhost:3000", "http://127.0.0.1:3000", "http://localhost:8080"]

# AI Service Configuration
# OpenAI
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4

# Azure OpenAI
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_API_KEY=your-azure-openai-api-key
AZURE_OPENAI_DEPLOYMENT_NAME=your-deployment-name
AZURE_OPENAI_API_VERSION=2023-12-01-preview

# Other AI Services
ANTHROPIC_API_KEY=your-anthropic-api-key
COHERE_API_KEY=your-cohere-api-key

# Application Configuration
MAX_FLOW_EXECUTION_TIME=300
DEFAULT_MODEL_TEMPERATURE=0.7
DEFAULT_MAX_TOKENS=1000

# Monitoring & Observability
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=8001
SENTRY_DSN=your-sentry-dsn-for-error-tracking

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@domain.com
SMTP_PASSWORD=your-app-password
FROM_EMAIL=noreply@prompt-flow.dev

# File Storage
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760  # 10MB in bytes

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60  # seconds

# Cache Configuration
CACHE_TTL=3600  # 1 hour in seconds
CACHE_MAX_SIZE=1000

# Development Settings
HOT_RELOAD=true
AUTO_MIGRATE=true
SEED_DATABASE=true
