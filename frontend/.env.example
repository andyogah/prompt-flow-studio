# =================================
# PROMPT FLOW FRONTEND CONFIGURATION
# =================================

# API Configuration
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_API_VERSION=v1

# WebSocket Configuration
NEXT_PUBLIC_WS_URL=ws://localhost:8000/ws

# Authentication
NEXT_PUBLIC_AUTH_ENABLED=false
NEXT_PUBLIC_OAUTH_CLIENT_ID=your-oauth-client-id

# Environment
NEXT_PUBLIC_ENVIRONMENT=development
NEXT_PUBLIC_APP_NAME="Prompt Flow"
NEXT_PUBLIC_APP_VERSION=0.1.0

# Feature Flags
NEXT_PUBLIC_ENABLE_AB_TESTING=true
NEXT_PUBLIC_ENABLE_COLLABORATION=true
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_ENABLE_EXPORT=true

# Analytics & Monitoring
NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=your-ga-id
NEXT_PUBLIC_SENTRY_DSN=your-sentry-dsn
NEXT_PUBLIC_HOTJAR_ID=your-hotjar-id

# UI Configuration
NEXT_PUBLIC_THEME=light
NEXT_PUBLIC_PRIMARY_COLOR=#3b82f6
NEXT_PUBLIC_MAX_NODES_PER_FLOW=100
NEXT_PUBLIC_AUTO_SAVE_INTERVAL=30000

# File Upload
NEXT_PUBLIC_MAX_FILE_SIZE=10485760  # 10MB
NEXT_PUBLIC_ALLOWED_FILE_TYPES=.json,.yaml,.yml,.txt,.csv

# Development Settings
NEXT_PUBLIC_DEBUG_MODE=true
NEXT_PUBLIC_SHOW_DEV_TOOLS=true
NEXT_PUBLIC_MOCK_API=false

# External Services
NEXT_PUBLIC_DOCS_URL=https://docs.prompt-flow.dev
NEXT_PUBLIC_SUPPORT_URL=https://support.prompt-flow.dev
NEXT_PUBLIC_GITHUB_URL=https://github.com/prompt-flow/prompt-flow

# Experimental Features
NEXT_PUBLIC_ENABLE_BETA_FEATURES=false
NEXT_PUBLIC_ENABLE_AI_SUGGESTIONS=true
NEXT_PUBLIC_ENABLE_REAL_TIME_COLLABORATION=false
